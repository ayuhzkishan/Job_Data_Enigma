<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="अपने विवरण दर्ज करें"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="पूरा नाम *"
            android:textSize="18sp"
            android:padding="5dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTextFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="पूरा नाम दर्ज करें"
            tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="पता *"
            android:textSize="18sp"
            android:padding="5dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="पता दर्ज करें"
            tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields,VisualLintTextFieldSize" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="संपर्क नंबर *"
            android:textSize="18sp"
            android:padding="5dp"
            tools:ignore="HardcodedText" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+91"
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/editTextContacts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="संपर्क नंबर दर्ज करें"
                android:textSize="16sp"
                android:minHeight="48dp"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="10"
                android:padding="8dp"
                android:layout_weight="9"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="10वीं पासिंग वर्ष *"
            android:textSize="18sp"
            android:padding="5dp"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spinner10thYear"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="3dp"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/buttonUploadFile_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#ff33b5e5"
                android:text="चित्र या PDF अपलोड करें"
                android:textColor="#455A64"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,HardcodedText,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="40dp"
                android:backgroundTint="#F44336"
                android:text="फ़ाइल नष्ट करें"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="12वीं / डिप्लोमा पासिंग वर्ष"
            android:textSize="18sp"
            android:padding="5dp"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spinner12thYear"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/buttonUploadFile_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#ff33b5e5"
                android:text="चित्र या PDF अपलोड करें"
                android:textColor="#455A64"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText,TouchTargetSizeCheck" />

            <Button
                android:id="@+id/buttonDelete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="40dp"
                android:backgroundTint="#F44336"
                android:text="फ़ाइल नष्ट करें"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="12वीं विशेषीकरण"
            android:textSize="18sp"
            android:padding="5dp"
            tools:ignore="HardcodedText" />

        <Spinner
            android:id="@+id/spinner12thSpecialization"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="डिप्लोमा विशेषीकरण"
            android:textSize="18sp"
            android:padding="5dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTextDiplomaSpecialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="डिप्लोमा विशेषीकरण दर्ज करें"
            tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize,TextContrastCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="अतिरिक्त कौशल"
            android:textSize="18sp"
            android:padding="5dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editTextSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="अन्य कौशल दर्ज करें"
            tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize,TextContrastCheck" />


        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:text="जमा करें"
            tools:ignore="HardcodedText,ObsoleteLayoutParam,TouchTargetSizeCheck" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/activity_splash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_rawRes="@raw/paytmanimation"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_loop="false" />

    </LinearLayout>

</ScrollView>